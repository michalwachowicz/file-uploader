<% const isDialogOpen = typeof isOpen !== 'undefined' ? isOpen : false; %>

<div
  id="<%= id %>"
  class="dialog <%= isDialogOpen ? 'dialog--open' : '' %>"
  aria-hidden="<%= isDialogOpen ? 'false' : 'true' %>"
  style="display: <%= isDialogOpen ? 'block' : 'none' %>"
  data-dialog
>
  <div class="dialog__backdrop" data-dialog-backdrop></div>

  <div class="dialog__panel" role="dialog" aria-modal="true" aria-labelledby="<%= id %>-title">
    <header class="dialog__header">
      <h2 id="<%= id %>-title" class="dialog__title"><%= title %></h2>
      <button type="button" class="dialog__close" data-dialog-close aria-label="Close">Ã—</button>
    </header>

    <div class="dialog__body">
      <%- include(bodyPartial, (typeof bodyData !== 'undefined' ? bodyData : {})) %>
    </div>
  </div>
</div>
